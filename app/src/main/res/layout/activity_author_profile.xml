<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/splashbackground"
    android:paddingTop="40dp"
    android:paddingBottom="40dp">

    <!-- Circular profile image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_marginBottom="84dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/circle_shape"
        android:scaleType="centerCrop"
        android:src="@drawable/author_profile" />

    <!-- Profile Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:background="@drawable/card_bg_rounded">

        <!-- Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:text="Name : "
                android:textColor="#444"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="K.D.C.Sepiyumi"
                android:textStyle="bold"
                android:textColor="#222"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Student no -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:text="Student no : "
                android:textColor="#444"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="2022t01577"
                android:textStyle="bold"
                android:textColor="#222"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Personal Statement -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:text="Personal Statement : "
                android:textColor="#444"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="This is a mobile news app designed for Faculty of Technology in University of Colombo to stay updated with academic, sports, and event news."
                android:textStyle="bold"
                android:textColor="#222"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Release Version -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="Release Version : "
                android:textColor="#444"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="v1.1.4"
                android:textStyle="bold"
                android:textColor="#222"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>



    <!-- Home Button -->
    <Button
        android:id="@+id/btnHome"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="72dp"
        android:layout_gravity="center"
        android:text="Home"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#fff"
        android:background="@drawable/home_button_bg"/>
</LinearLayout>
